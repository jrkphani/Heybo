# HeyBo Chatbot Development Environment Optimizations

# Disable Next.js telemetry for faster builds
NEXT_TELEMETRY_DISABLED=1

# Disable ESLint during development for faster builds
DISABLE_ESLINT_PLUGIN=true

# Reduce logging for faster builds
NEXT_PRIVATE_DEBUG_CACHE=false

# Optimize TypeScript checking
TSC_COMPILE_ON_ERROR=true

# Development mode flag
NODE_ENV=development

# Widget-specific development settings
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_MOCK_API=true
